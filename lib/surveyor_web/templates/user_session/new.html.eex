<h1 class="text-xl font-bold">Log in</h1>

<%= form_for @conn, Routes.user_session_path(@conn, :create), [as: :user], fn f -> %>
  <%= if @error_message do %>
    <div class="alert alert-danger">
      <p><%= @error_message %></p>
    </div>
  <% end %>

  <%= label f, :email, class: "input-text" %>
  <%= email_input f, :email, required: true, class: "input-area" %>

  <%= label f, :password, class: "input-text" %>
  <%= password_input f, :password, required: true, class: "input-area" %>

  <%= label f, :remember_me, "Keep me logged in for 60 days", class: "input-text" %>
  <%= checkbox f, :remember_me, class: "" %>

  <div>
    <%= submit "Log in" %>
  </div>
<% end %>

<p>
  <%= link "Register", to: Routes.user_registration_path(@conn, :new) %> |
  <%= link "Forgot your password?", to: Routes.user_reset_password_path(@conn, :new) %>
</p>
